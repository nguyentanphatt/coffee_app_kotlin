<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@drawable/white_bg"
    android:elevation="3dp"
    android:padding="12dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/favoriteItemImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="Product Image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Title -->
    <TextView
        android:id="@+id/favoriteItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/favoriteRemoveBtn"
        app:layout_constraintStart_toEndOf="@+id/favoriteItemImg"
        app:layout_constraintTop_toTopOf="@+id/favoriteItemImg"
        tools:text="Cappuccino" />

    <!-- Description -->
    <TextView
        android:id="@+id/favoriteItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/favoriteRemoveBtn"
        app:layout_constraintStart_toStartOf="@+id/favoriteItemTitle"
        app:layout_constraintTop_toBottomOf="@+id/favoriteItemTitle"
        tools:text="Delicious coffee with milk" />

    <!-- Rating Container -->
    <LinearLayout
        android:id="@+id/ratingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/favoriteItemPrice"
        app:layout_constraintStart_toStartOf="@+id/favoriteItemTitle"
        app:layout_constraintTop_toBottomOf="@+id/favoriteItemDescription">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:contentDescription="Rating star"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/favoriteItemRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="4.8" />
    </LinearLayout>

    <!-- Price -->
    <TextView
        android:id="@+id/favoriteItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkBrown"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/favoriteItemImg"
        app:layout_constraintStart_toStartOf="@+id/favoriteItemTitle"
        tools:text="$24.00" />

    <!-- Remove Button -->
    <ImageView
        android:id="@+id/favoriteRemoveBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove from favorites"
        android:padding="4dp"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/darkBrown" />

    <!-- Add to Cart Button -->

</androidx.constraintlayout.widget.ConstraintLayout>