<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/white_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ItemCartImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/ItemCartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="title"
            android:textColor="@color/darkBrown"
            app:layout_constraintStart_toEndOf="@+id/ItemCartImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ItemCartDecBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/orange_bg"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ItemCartImg"
            app:layout_constraintStart_toStartOf="@+id/ItemCartTitle" />

        <TextView
            android:id="@+id/ItemCartIncBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/orange_bg"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ItemCartImg"
            app:layout_constraintStart_toEndOf="@+id/ItemCartQuantity" />

        <TextView
            android:id="@+id/ItemCartQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="0"
            android:textColor="@color/darkBrown"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ItemCartDecBtn"
            app:layout_constraintStart_toEndOf="@+id/ItemCartDecBtn"
            app:layout_constraintTop_toTopOf="@+id/ItemCartDecBtn"
            tools:textSize="18sp" />

        <TextView
            android:id="@+id/ItemCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$-"
            app:layout_constraintBottom_toTopOf="@+id/ItemCartDecBtn"
            app:layout_constraintStart_toStartOf="@+id/ItemCartTitle"
            app:layout_constraintTop_toBottomOf="@+id/ItemCartTitle" />

        <TextView
            android:id="@+id/ItemCartTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="$0"
            android:textColor="@color/darkBrown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ItemCartIncBtn"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ItemCartRemoveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        app:srcCompat="@drawable/close" />

</androidx.constraintlayout.widget.ConstraintLayout>